<view class="topBar">搜索完成, 一共找到2个帮手</view>
<view class="containers" bindtap="select_helper_btn">
    <van-row>
      <van-col span="4" data-id="{{aOpenId}}" bindtap="autProfile_btn">
        <van-image
          round
          style="margin-left:5px; "
          fit="cover"
          width="3rem"
          height="3rem"
          src="cloud://cirbis-db.6369-cirbis-db-1301779952/self.jpg"/>
      </van-col>
      <van-col span="13" class="textName" data-id="{{aOpenId}}" bindtap="autProfile_btn">
        <view class="name">陈嶓</view>
        <view class="tags">
          <van-tag type="danger" size="medium" plain class="tags" >接机</van-tag>
          <van-tag type="primary" size="medium" plain class="tags" >修马桶</van-tag>
          <van-tag type="success" size="medium" plain class="tags" >日常生活</van-tag>
        </view>
      </van-col>
      <van-col span="7" class="location">
          <span class="location">洛杉矶</span>
      </van-col>
    </van-row>
    <view class="review_point"></view>
    <van-row>
      <van-col span="19">
        <span class="review">评分</span>
        <van-rate
          value="4.5"
          size="{{ 20 }}"
          allow-half
          class="rate"
          void-color="#eee"
          void-icon="star"
        />
        <span class="point">2.5</span>
      </van-col>
      <van-col span="5" class="mile">
        距离10公里远
      </van-col>
    </van-row>
  <van-divider />
</view>




